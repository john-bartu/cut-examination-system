{
    "name": "cut-examination-system",
    "version": "1.0.0",
    "description": "The system that allows you to conduct the diploma examination ",
    "main": "./dist/main.js",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "lint": "eslint -c .eslintrc --ext .ts ./src",
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/john-bartu/cut-examination-system.git"
    },
    "keywords": [
        "cut",
        "examination",
        "diploma",
        "system"
    ],
    "author": "CUT Students",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/john-bartu/cut-examination-system/issues"
    },
    "homepage": "https://github.com/john-bartu/cut-examination-system#readme",
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.63",
        "@electron-forge/maker-deb": "^6.0.0-beta.63",
        "@electron-forge/maker-rpm": "^6.0.0-beta.63",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
        "@electron-forge/maker-zip": "^6.0.0-beta.63",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "electron": "^18.1.0",
        "electron-squirrel-startup": "^1.0.0",
        "eslint": "^7.32.0",
        "typescript": "^4.5.5"
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "cut_examination_system"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    },
    "dependencies": {
        "node-xlsx": "^0.21.0",
        "sheetjs": "^2.0.0",
        "xlsx": "^0.18.5"
    }
}
